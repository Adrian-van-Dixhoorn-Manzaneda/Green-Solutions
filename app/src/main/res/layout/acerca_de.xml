<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center"
    android:elevation="8dp">


    <!-- Descripción -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Somos una empresa dedicada a la innovación tecnológica en parques. Diseñamos bastones con sensores que mejoran la experiencia de los visitantes al detectar cambios en el entorno y proporcionar información útil en tiempo real."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:gravity="center" />
</LinearLayout>
