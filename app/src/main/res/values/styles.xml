<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTitleText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:titleTextStyle">@style/DialogTitleText</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>
</resources>